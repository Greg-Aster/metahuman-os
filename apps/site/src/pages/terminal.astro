        <div class="log-stream-pane h-full min-h-0 min-w-0 overflow-hidden">
          <LogStream client:load />
        </div>
        <!-- Bottom Pane -->
        <div class="persona-chat-pane h-full min-h-0 min-w-0 md:col-span-2">
          <PersonaChat client:load />
        </div>
      </div>
    </div>
  </div>
</Layout>
