---
import Base from '../layouts/Base.astro';
import AgentMonitor from '../components/AgentMonitor.svelte';
---

<Base title="Agent Monitor - MetaHuman OS">
  <div class="max-w-6xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Agent Monitor</h1>
      <p class="text-gray-600 dark:text-gray-400 mt-2">
        Real-time monitoring of autonomous agents and memory processing
      </p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
      <AgentMonitor client:load compact={false} />
    </div>
  </div>
</Base>
