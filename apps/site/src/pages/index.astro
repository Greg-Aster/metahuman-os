---
// Pre-warm expensive modules on page load (prevents 50-second first request delay)
import '../prewarm';

import ChatLayout from '../components/ChatLayout.svelte';
import LeftSidebar from '../components/LeftSidebar.svelte';
import RightSidebar from '../components/RightSidebar.svelte';
import CenterContent from '../components/CenterContent.svelte';
import ThemeToggle from '../components/ThemeToggle.astro';
import AuthGate from '../components/AuthGate.svelte';
import '../styles/tailwind.css';
import '../styles/chat-animations.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>MetaHuman OS</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script is:inline>
      // Theme initialization (same as Base.astro)
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>

    <!-- PERFORMANCE FIX: Bootstrap critical data before component hydration -->
    <!-- This prevents features from being broken until components mount -->
    <script is:inline type="module">
      // Fetch critical status data immediately (before Svelte hydration)
      // This populates the statusStore so components have data when they mount
      fetch('/api/status', { cache: 'no-store' })
        .then(res => res.json())
        .then(async data => {
          // Import statusStore dynamically
          const { statusStore } = await import('./src/stores/navigation');
          // Populate statusStore so components have data when they mount
          statusStore.set(data);
          console.log('[bootstrap] Status data loaded before hydration');
        })
        .catch(err => {
          console.error('[bootstrap] Failed to load status:', err);
        });
    </script>
  </head>
  <body>
    <!-- Authentication Gate (blocks access until logged in) -->
    <AuthGate client:only="svelte" />

    <!-- Main Application -->
    <div id="main-app">
      <!-- PERFORMANCE: Use client:idle for faster initial page load -->
      <!-- Components hydrate after browser is idle, not blocking render -->
      <ChatLayout client:idle>
        <ThemeToggle slot="header-actions" />
        <LeftSidebar slot="left-sidebar" client:visible />
        <CenterContent slot="center" client:idle />
        <RightSidebar slot="right-sidebar" client:visible />
      </ChatLayout>
    </div>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    overflow: hidden;
  }

  html {
    background: white;
    color: rgb(17 24 39);
  }

  html.dark {
    background: rgb(3 7 18);
    color: rgb(243 244 246);
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>
