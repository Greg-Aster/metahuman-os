---
// Pre-warm expensive modules on page load (prevents 50-second first request delay)
import '../prewarm';

import ChatLayout from '../components/ChatLayout.svelte';
import LeftSidebar from '../components/LeftSidebar.svelte';
import RightSidebar from '../components/RightSidebar.svelte';
import CenterContent from '../components/CenterContent.svelte';
import ThemeToggle from '../components/ThemeToggle.astro';
import AuthGate from '../components/AuthGate.svelte';
import '../styles/tailwind.css';
import '../styles/chat-animations.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>MetaHuman OS</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script is:inline>
      // Theme initialization (same as Base.astro)
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>

    <!-- PERFORMANCE FIX: Bootstrap critical data before component hydration -->
    <!-- This pre-fetches status data so it's ready when components hydrate -->
    <!-- LOCAL-FIRST: On mobile, skip bootstrap fetch - nodeBridge handles everything locally -->
    <script is:inline>
      // Check for Capacitor (mobile app)
      const isCapacitor = typeof window !== 'undefined' && window.Capacitor?.isNativePlatform?.() === true;

      // LOCAL-FIRST ARCHITECTURE:
      // - Mobile: Skip bootstrap fetch - app is standalone, nodeBridge handles all API calls locally
      // - Web: Pre-fetch from same-origin server (web IS the server)
      if (!isCapacitor) {
        // Web only: fetch critical status data immediately
        fetch('/api/status', { cache: 'no-store', credentials: 'same-origin' })
          .then(res => res.json())
          .then(data => {
            window.__MH_BOOTSTRAP_STATUS__ = data;
            console.log('[bootstrap] Status data pre-fetched');
          })
          .catch(err => {
            console.error('[bootstrap] Failed to pre-fetch status:', err);
          });
      } else {
        console.log('[bootstrap] Mobile: skipping bootstrap fetch (local-first architecture)');
      }
    </script>
  </head>
  <body>
    <!-- Authentication Gate - ONLY renders children when authenticated -->
    <!-- Main app is a child, so it DOES NOT load until user is logged in -->
    <AuthGate client:only="svelte">
      <!-- Main Application - only renders when AuthGate confirms authentication -->
      <div id="main-app">
        <ChatLayout client:only="svelte">
          <ThemeToggle slot="header-actions" />
          <LeftSidebar slot="left-sidebar" client:only="svelte" />
          <CenterContent slot="center" client:only="svelte" />
          <RightSidebar slot="right-sidebar" client:only="svelte" />
        </ChatLayout>
      </div>
    </AuthGate>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    overflow: hidden;
  }

  html {
    background: white;
    color: rgb(17 24 39);
  }

  html.dark {
    background: rgb(3 7 18);
    color: rgb(243 244 246);
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>
