---
// Pre-warm expensive modules on page load (prevents 50-second first request delay)
import '../prewarm';

import ChatLayout from '../components/ChatLayout.svelte';
import LeftSidebar from '../components/LeftSidebar.svelte';
import RightSidebar from '../components/RightSidebar.svelte';
import CenterContent from '../components/CenterContent.svelte';
import ThemeToggle from '../components/ThemeToggle.astro';
import AuthGate from '../components/AuthGate.svelte';
import '../styles/tailwind.css';
import '../styles/chat-animations.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>MetaHuman OS</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script is:inline>
      // Theme initialization (same as Base.astro)
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>

    <!-- PERFORMANCE FIX: Bootstrap critical data before component hydration -->
    <!-- This pre-fetches status data so it's ready when components hydrate -->
    <script is:inline>
      // Fetch critical status data immediately and store in a global
      // Components will check for this on mount
      fetch('/api/status', { cache: 'no-store' })
        .then(res => res.json())
        .then(data => {
          window.__MH_BOOTSTRAP_STATUS__ = data;
          console.log('[bootstrap] Status data pre-fetched');
        })
        .catch(err => {
          console.error('[bootstrap] Failed to pre-fetch status:', err);
        });
    </script>
  </head>
  <body>
    <!-- Authentication Gate (blocks access until logged in) -->
    <!-- client:only="svelte" skips SSR and renders only on client (DOM mode, not SSR mode) -->
    <AuthGate client:only="svelte" />

    <!-- Main Application -->
    <div id="main-app">
      <!-- client:only="svelte" required because build.ssr:true compiles SSR-format components -->
      <!-- This ensures components render on client with DOM compilation mode -->
      <ChatLayout client:only="svelte">
        <ThemeToggle slot="header-actions" />
        <LeftSidebar slot="left-sidebar" client:only="svelte" />
        <CenterContent slot="center" client:only="svelte" />
        <RightSidebar slot="right-sidebar" client:only="svelte" />
      </ChatLayout>
    </div>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    overflow: hidden;
  }

  html {
    background: white;
    color: rgb(17 24 39);
  }

  html.dark {
    background: rgb(3 7 18);
    color: rgb(243 244 246);
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>
