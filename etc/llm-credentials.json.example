{
  "$schema": "https://metahuman.dev/schemas/llm-credentials.json",
  "description": "User LLM credentials template. Copy to profiles/<username>/etc/llm-credentials.json",

  "offlineProvider": "runpod",

  "runpod": {
    "apiKey": "rpa_YOUR_RUNPOD_API_KEY",
    "endpointId": "YOUR_ENDPOINT_ID"
  },

  "claude": {
    "apiKey": "sk-ant-YOUR_ANTHROPIC_API_KEY"
  },

  "openrouter": {
    "apiKey": "sk-or-YOUR_OPENROUTER_API_KEY"
  },

  "openai": {
    "apiKey": "sk-YOUR_OPENAI_API_KEY",
    "endpoint": "https://api.openai.com/v1/chat/completions"
  },

  "allowSystemFallback": true,

  "notes": [
    "offlineProvider: Which provider to use when mobile app is offline",
    "allowSystemFallback: If true, fall back to system keys when user keys unavailable",
    "Only include providers you have API keys for - remove unused sections"
  ]
}
