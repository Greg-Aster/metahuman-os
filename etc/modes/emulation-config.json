{
  "comment": "Emulation mode (chatbot) fine-tuning configuration",
  "notes": [
    "Emulation mode is standard userâ†”assistant chat without thought chains.",
    "Balanced training approach, standard hyperparameters.",
    "Focus on conversational quality and response coherence.",
    "This mode creates a 'frozen snapshot' personality."
  ],

  "cognitive_mode": "emulation",

  "base_model": "Qwen/Qwen3-14B",
  "training_mode": "full_finetune",

  "learning_rate": 5e-6,
  "num_train_epochs": 3,
  "per_device_train_batch_size": 1,
  "gradient_accumulation_steps": 32,

  "max_seq_length": 2048,
  "warmup_steps": 100,
  "logging_steps": 10,
  "save_steps": 500,

  "fp16": false,
  "bf16": true,

  "optim": "adafactor",
  "weight_decay": 0.01,
  "max_grad_norm": 1.0,

  "save_total_limit": 2,

  "dataset_requirements": {
    "min_samples": 5000,
    "recommended_samples": 12000,
    "mode_filter": "emulation",
    "note": "Emulation mode benefits from large conversational datasets"
  },

  "gguf_conversion": {
    "enabled": true,
    "quantization_type": "Q6_K",
    "intermediate_type": "f16"
  }
}
